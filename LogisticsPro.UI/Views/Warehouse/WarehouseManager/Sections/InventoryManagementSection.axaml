<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LogisticsPro.UI.ViewModels"
             x:Class="LogisticsPro.UI.Views.Warehouse.WarehouseManager.Sections.InventoryManagementSection"
             x:DataType="vm:WarehouseManagerDashboardViewModel">
    
    <UserControl.Styles>
        <!-- Button Styles -->
        <Style Selector="Button.primary-button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,6"/>
        </Style>
        
        <Style Selector="Button.primary-button:pointerover">
            <Setter Property="Background" Value="#2980B9"/>
        </Style>

        <Style Selector="Button.secondary-button">
            <Setter Property="Background" Value="#95A5A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,6"/>
        </Style>
        
        <Style Selector="Button.secondary-button:pointerover">
            <Setter Property="Background" Value="#7F8C8D"/>
        </Style>

        <!-- Search TextBox with proper black text color -->
        <Style Selector="TextBox.search-input">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style Selector="TextBox.search-input:focus">
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        
        <Style Selector="TextBox.search-input:pointerover">
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- Form TextBox Style for Dialog -->
        <Style Selector="TextBox.form-input">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style Selector="TextBox.form-input:focus">
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Enhanced DataGrid Styles for Smooth Resizing -->
        <Style Selector="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>
        
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12,0"/>
        </Style>
        
        <Style Selector="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="45"/>
        </Style>
        
        <Style Selector="DataGridRow:pointerover">
            <Setter Property="Background" Value="#F8F9FA"/>
        </Style>
        
        <Style Selector="DataGridRow:selected">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="DataGridRow:selected TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Styles>
    
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" Spacing="20">
                <!-- Header -->
                <StackPanel>
                    <TextBlock Text="Inventory Management" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Text="View and manage all warehouse inventory items" Foreground="#7F8C8D" FontSize="16"/>
                </StackPanel>
                
                <!-- Summary Cards -->
                <Grid ColumnDefinitions="*,*,*" Height="120">
                    <Border Grid.Column="0" Background="#3498DB" CornerRadius="10" Margin="0,0,10,0">
                        <StackPanel Margin="20" VerticalAlignment="Center">
                            <TextBlock Text="Total Items" FontSize="16" Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding InventoryItems.Count, FallbackValue='0'}" 
                                       FontSize="28" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="different products" FontSize="12" Foreground="#AED6F1"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Column="1" Background="#E74C3C" CornerRadius="10" Margin="5,0">
                        <StackPanel Margin="20" VerticalAlignment="Center">
                            <TextBlock Text="Low Stock Alert" FontSize="16" Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding LowStockItems.Count, FallbackValue='0'}" 
                                       FontSize="28" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="need restocking" FontSize="12" Foreground="#F1C40F"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Column="2" Background="#EAB308" CornerRadius="10" Margin="10,0,0,0">
                        <StackPanel Margin="20" VerticalAlignment="Center">
                            <TextBlock Text="Pending Requests" FontSize="16" Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding PendingRequests.Count, FallbackValue='0'}" 
                                       FontSize="28" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="awaiting approval" FontSize="12" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Search and Inventory Combined Section -->
                <Border Background="White" BorderBrush="Black" BorderThickness="2" CornerRadius="8">
                    <StackPanel Margin="20" Spacing="20">
                        
                        <!-- Real-time Search Section -->
                        <StackPanel Spacing="10">
                            <TextBlock Text="Search Inventory" FontSize="18" FontWeight="Bold"/>
                            <Grid ColumnDefinitions="*,Auto,Auto">  <!-- Changed to 3 columns -->
                                <!-- Real-time search TextBox -->
                                <TextBox Grid.Column="0" 
                                         Text="{Binding SearchText}" 
                                         Watermark="Search by product name, SKU, category, or location..."
                                         Classes="search-input"/>

                                <!-- Clear button -->
                                <Button Grid.Column="1" 
                                        Content="✕ Clear" 
                                        Classes="clear-button-orange" 
                                        Margin="10,0,0,0"
                                        Height="35"
                                        Width="80"
                                        HorizontalContentAlignment="Center"
                                        Command="{Binding ClearSearchCommand}"
                                        ToolTip.Tip="Clear search"/>
                    
                                <!-- Add Product button -->
                                <Button Grid.Column="2"
                                        Content="➕Add Product"
                                        Classes="primary-button"
                                        Margin="10,0,0,0"
                                        Height="35"
                                        Width="130"
                                        HorizontalContentAlignment="Center"
                                        Command="{Binding OpenAddProductDialogCommand}"
                                        ToolTip.Tip="Add new product to catalog"/>
                            </Grid>

                            <!-- Search status indicator -->
                            <TextBlock Text="{Binding InventoryItems.Count, StringFormat='Showing {0} items'}" 
                                       FontSize="12"
                                       Foreground="Black"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <!-- Separator Line -->
                        <Border Height="1" Background="Black" Margin="0,10"/>
                        
                        <!-- Inventory Table Section -->
                        <StackPanel>
                            <TextBlock Text="Current Inventory" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                            
                            <!-- DataGrid with better column widths -->
                            <DataGrid ItemsSource="{Binding InventoryItems}"
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      BorderThickness="2"
                                      BorderBrush="Black"
                                      ColumnWidth="*">
                                <DataGrid.Columns>
                                    <!-- Product Name -->
                                    <DataGridTextColumn Header="Product Name" 
                                                        Binding="{Binding Product.Name, FallbackValue='N/A'}" 
                                                        Width="250"
                                                        MinWidth="220"
                                                        CanUserResize="True"/>
        
                                    <!--SKU -->
                                    <DataGridTextColumn Header="SKU" 
                                                        Binding="{Binding Product.SKU, FallbackValue='N/A'}" 
                                                        Width="140"
                                                        MinWidth="120"
                                                        CanUserResize="True"/>
        
                                    <!-- Category -->
                                    <DataGridTextColumn Header="Category" 
                                                        Binding="{Binding Product.Category, FallbackValue='N/A'}" 
                                                        Width="150"
                                                        MinWidth="130"
                                                        CanUserResize="True"/>
        
                                    <!-- Location  -->
                                    <DataGridTextColumn Header="Location" 
                                                        Binding="{Binding Location, FallbackValue='N/A'}" 
                                                        Width="120"
                                                        MinWidth="110"
                                                        CanUserResize="True"/>
        
                                    <!-- Current Stock -->
                                    <DataGridTextColumn Header="Current Stock" 
                                                        Binding="{Binding QuantityInStock, FallbackValue='0'}" 
                                                        Width="140"
                                                        MinWidth="130"
                                                        CanUserResize="True"/>
        
                                    <!-- Min Level -->
                                    <DataGridTextColumn Header="Min Level" 
                                                        Binding="{Binding MinimumStockLevel, FallbackValue='0'}" 
                                                        Width="*"
                                                        MinWidth="110"
                                                        CanUserResize="True"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Loading Indicator -->
                <Grid Background="#80FFFFFF" 
                      IsVisible="{Binding IsLoading, FallbackValue='false'}"
                      Height="100">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                        <TextBlock Text="Loading inventory data..." Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Add Product Dialog -->
        <Border Background="#80000000" 
                IsVisible="{Binding IsAddProductDialogOpen}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ZIndex="1000">
            <Border Background="White"
                    CornerRadius="8"
                    BoxShadow="0 4 20 0 #40000000"
                    Width="520"
                    MaxHeight="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="30" Spacing="20">
                        <!-- Dialog Header -->
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="Add New Product" FontSize="22" FontWeight="Bold" Foreground="Black"/>
                            <Button Grid.Column="1" 
                                    Content="✕" 
                                    Background="Transparent" 
                                    Foreground="Black" 
                                    BorderThickness="0"
                                    Command="{Binding CloseAddProductDialogCommand}"
                                    Width="30" Height="30"
                                    FontSize="16" FontWeight="Bold"/>
                        </Grid>
                        
                        <!-- Product Form with Dropdowns -->
                        <StackPanel Spacing="15">
                            <!-- Product Name -->
                            <StackPanel>
                                <TextBlock Text="Product Name *" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NewProduct.Name}" 
                                         Watermark="Enter product name..."
                                         Classes="form-input"/>
                            </StackPanel>
                            
                            <!-- SKU and Category in one row -->
                            <Grid ColumnDefinitions="*,10,*">
                                <!-- SKU -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="SKU *" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding NewProduct.SKU}" 
                                             Watermark="e.g., PROD-001"
                                             Classes="form-input"/>
                                </StackPanel>
                                
                                <!-- Category Dropdown -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Category *" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding AvailableCategories}"
                                              SelectedItem="{Binding NewProduct.Category}"
                                              PlaceholderText="Select category..."
                                              Height="35"
                                              Background="White"
                                              Foreground="Black"
                                              BorderBrush="Black"
                                              BorderThickness="1"
                                              CornerRadius="4"
                                              Padding="12,8"
                                              FontSize="14">
                                        <!-- Inline ComboBox styling -->
                                        <ComboBox.Styles>
                                            <Style Selector="ComboBox /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Style>
                                            <Style Selector="ComboBoxItem">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Padding" Value="12,8"/>
                                            </Style>
                                            <Style Selector="ComboBoxItem:pointerover">
                                                <Setter Property="Background" Value="#F3F4F6"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Style>
                                            <Style Selector="ComboBoxItem:selected">
                                                <Setter Property="Background" Value="#3498DB"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Style>
                                        </ComboBox.Styles>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Unit Price and Unit of Measure in one row -->
                            <Grid ColumnDefinitions="*,10,*">
                                <!-- Unit Price -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Unit Price *" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding UnitPriceText}" 
                                             Watermark="e.g., 29.99"
                                             Classes="form-input"/>
                                </StackPanel>
                                
                                <!-- Unit of Measure Dropdown -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Unit of Measure *" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding AvailableUnits}"
                                              SelectedItem="{Binding NewProduct.UnitOfMeasure}"
                                              PlaceholderText="Select unit..."
                                              Height="35"
                                              Background="White"
                                              Foreground="Black"
                                              BorderBrush="Black"
                                              BorderThickness="1"
                                              CornerRadius="4"
                                              Padding="12,8"
                                              FontSize="14">
                                        <!-- Inline ComboBox styling -->
                                        <ComboBox.Styles>
                                            <Style Selector="ComboBox /template/ ContentPresenter#PART_ContentPresenter">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Style>
                                            <Style Selector="ComboBoxItem">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Padding" Value="12,8"/>
                                            </Style>
                                            <Style Selector="ComboBoxItem:pointerover">
                                                <Setter Property="Background" Value="#F3F4F6"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Style>
                                            <Style Selector="ComboBoxItem:selected">
                                                <Setter Property="Background" Value="#3498DB"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Style>
                                        </ComboBox.Styles>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Supplier Dropdown -->
                            <StackPanel>
                                <TextBlock Text="Supplier *" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding AvailableSuppliers}"
                                          SelectedItem="{Binding NewProduct.Supplier}"
                                          PlaceholderText="Select supplier..."
                                          Height="35"
                                          Background="White"
                                          Foreground="Black"
                                          BorderBrush="Black"
                                          BorderThickness="1"
                                          CornerRadius="4"
                                          Padding="12,8"
                                          FontSize="14">
                                    <!-- Inline ComboBox styling -->
                                    <ComboBox.Styles>
                                        <Style Selector="ComboBox /template/ ContentPresenter#PART_ContentPresenter">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                        <Style Selector="ComboBoxItem">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                        </Style>
                                        <Style Selector="ComboBoxItem:pointerover">
                                            <Setter Property="Background" Value="#F3F4F6"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                        <Style Selector="ComboBoxItem:selected">
                                            <Setter Property="Background" Value="#3498DB"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                    </ComboBox.Styles>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Description -->
                            <StackPanel>
                                <TextBlock Text="Description (Optional)" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NewProduct.Description}" 
                                         Watermark="Enter product description..."
                                         Height="80" 
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         Classes="form-input"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Info Section -->
                        <Border Background="#E1F5FE" BorderBrush="#03A9F4" BorderThickness="1" CornerRadius="6" Padding="15">
                            <StackPanel>
                                <TextBlock Text="ℹ️ Product Information" FontWeight="SemiBold" Foreground="#01579B" Margin="0,0,0,5"/>
                                <TextBlock Text="• New products will be added to the catalog immediately" FontSize="12" Foreground="#0277BD"/>
                                <TextBlock Text="• Inventory items will be created with 0 stock automatically" FontSize="12" Foreground="#0277BD"/>
                                <TextBlock Text="• All fields marked with * are required" FontSize="12" Foreground="#0277BD"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Action Buttons -->
                        <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,10,0,0">
                            <Button Grid.Column="1" 
                                    Content="Cancel" 
                                    Classes="secondary-button"
                                    Width="80"
                                    Margin="0,0,10,0"
                                    Command="{Binding CloseAddProductDialogCommand}"/>
                            
                            <Button Grid.Column="2" 
                                    Content="Add Product" 
                                    Classes="primary-button"
                                    Width="120"
                                    Command="{Binding SubmitAddProductCommand}"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Border>
    </Grid>
</UserControl>