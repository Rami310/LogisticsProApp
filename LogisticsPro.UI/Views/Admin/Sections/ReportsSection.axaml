<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:LogisticsPro.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LogisticsPro.UI.Views.Admin.Sections.ReportsSection"
             x:DataType="vm:AdminDashboardViewModel">
    
    <StackPanel Margin="20">
        <TextBlock Text="Reports Dashboard" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   Foreground="#2C3E50"/>
        
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <ComboBox Width="150" Margin="0,0,10,0" SelectedIndex="{Binding SelectedReportPeriod}">
                <ComboBoxItem>This Week</ComboBoxItem>
                <ComboBoxItem>This Month</ComboBoxItem>
                <ComboBoxItem>This Quarter</ComboBoxItem>
                <ComboBoxItem>This Year</ComboBoxItem>
            </ComboBox>
            
            <Button Content="Generate Report" 
                    Command="{Binding GenerateReportCommand}"
                    Classes="primary-button"
                    Padding="10,5"/>
        </StackPanel>
        
        <Border Background="#f0f0f0" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,10,0,20">
            <StackPanel>
                <TextBlock Text="Available Reports" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           Foreground="#2C3E50"/>
                
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                    <!-- Report 1 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Delivery Performance Report" 
                               Margin="0,10"/>
                    <Button Grid.Row="0" Grid.Column="1" 
                            Content="View" 
                            Command="{Binding ViewReportCommand}"
                            CommandParameter="Delivery Performance Report"
                            Classes="primary-button"
                            Padding="10,5"/>
                    
                    <!-- Report 2 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Inventory Status Report" 
                               Margin="0,10"/>
                    <Button Grid.Row="1" Grid.Column="1" 
                            Content="View" 
                            Command="{Binding ViewReportCommand}"
                            CommandParameter="Inventory Status Report"
                            Classes="primary-button"
                            Padding="10,5"/>
                    
                    <!-- Report 3 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Cost Analysis Report" 
                               Margin="0,10"/>
                    <Button Grid.Row="2" Grid.Column="1" 
                            Content="View" 
                            Command="{Binding ViewReportCommand}"
                            CommandParameter="Cost Analysis Report"
                            Classes="primary-button"
                            Padding="10,5"/>
                    
                    <!-- Report 4 -->
                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Carrier Performance Report" 
                               Margin="0,10"/>
                    <Button Grid.Row="3" Grid.Column="1" 
                            Content="View" 
                            Command="{Binding ViewReportCommand}"
                            CommandParameter="Carrier Performance Report"
                            Classes="primary-button"
                            Padding="10,5"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <TextBlock Text="Recent Reports" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"
                   Foreground="#2C3E50"/>
                   
        <Border Background="#f0f0f0" 
                CornerRadius="5" 
                Padding="15">
            <ListBox Height="150" ItemsSource="{Binding RecentReports}">
                <ListBox.Items>
                    <ListBoxItem>Delivery Performance Report - March 2025</ListBoxItem>
                    <ListBoxItem>Inventory Status Report - February 2025</ListBoxItem>
                    <ListBoxItem>Cost Analysis Report - Q1 2025</ListBoxItem>
                    <ListBoxItem>Carrier Performance Report - January 2025</ListBoxItem>
                </ListBox.Items>
            </ListBox>
        </Border>
    </StackPanel>
</UserControl>