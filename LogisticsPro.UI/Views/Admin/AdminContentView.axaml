<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LogisticsPro.UI.ViewModels"
             xmlns:shared="clr-namespace:LogisticsPro.UI.Views.Shared"
             x:Class="LogisticsPro.UI.Views.Admin.AdminContentView"
             x:DataType="vm:AdminDashboardViewModel"
             FlowDirection="{Binding FlowDirection}">

    <Grid>
        <!-- MAIN DASHBOARD - Shows when CurrentSectionView is null -->
        <Grid IsVisible="{Binding CurrentSectionView, Converter={x:Static ObjectConverters.IsNull}}"
              RowDefinitions="Auto,Auto,Auto,Auto,*">
            
            <!-- Welcome Message FIRST -->
            <Border Grid.Row="0" Background="White" Padding="25,15,25,15">
                <TextBlock Text="{Binding WelcomeMessage, FallbackValue='Welcome to Admin Dashboard!'}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#1E293B" />
            </Border>
            
            <!-- Revenue Section SECOND -->
            <shared:RevenueSectionView Grid.Row="1" 
                                       DataContext="{Binding RevenueViewModel}"
                                       Margin="20,30,20,20"/>

            <!-- Warehouse Statistics THIRD -->
            <StackPanel Grid.Row="2" Margin="20,0,20,20">
                <TextBlock Text="{Binding WarehouseOperationsHeaderText, FallbackValue='ðŸ“¦ Warehouse Operations'}" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="10,0,0,15"/>
                <Border Background="White" BorderBrush="black" BorderThickness="2" CornerRadius="8" Height="80" Padding="25,0">
                    <Grid ColumnDefinitions="*,*,*,*,*">
                        <!-- Total Stock -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalStockQuantity, FallbackValue='0'}" FontSize="24" FontWeight="Bold" Foreground="#3B82F6" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalStockText, FallbackValue='Total Stock'}" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding PendingRequests, FallbackValue='0'}" FontSize="24" FontWeight="Bold" Foreground="#EAB308" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding PendingText, FallbackValue='Pending'}" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="{Binding LowStockItems, FallbackValue='0'}" FontSize="24" FontWeight="Bold" Foreground="#EF4444" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding LowStockText, FallbackValue='Low Stock'}" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ApprovedRequests, FallbackValue='0'}" FontSize="24" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding ApprovedText, FallbackValue='Approved'}" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4" VerticalAlignment="Center">
                            <TextBlock Text="{Binding AvailableBudgetDisplay, FallbackValue='$0'}" FontSize="24" FontWeight="Bold" Foreground="#8B5CF6" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding AvailableText, FallbackValue='Available'}" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Logistics Statistics FOURTH -->
            <StackPanel Grid.Row="3" Margin="20,0,20,20">
                <TextBlock Text="{Binding LogisticsOperationsHeaderText, FallbackValue='ðŸšš Logistics Operations'}" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="10,0,0,15"/>
                <Border Background="White" BorderBrush="black" BorderThickness="2" CornerRadius="8" Height="80" Padding="25,0">
                    <Grid ColumnDefinitions="*,*,*">
                        <!-- Total Requests -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalLogisticsRequests}" FontSize="24" FontWeight="Bold" Foreground="#3B82F6" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalRequestsText, FallbackValue='Total Requests'}" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <Border Grid.Column="0" Width="2" Background="Black" HorizontalAlignment="Right" Margin="0,15"/>
                        
                        <!-- In Inventory -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding InInventoryRequests}" FontSize="24" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding InInventoryText, FallbackValue='In Inventory'}" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="2" Background="Black" HorizontalAlignment="Right" Margin="0,15"/>
                        
                        <!-- Ready for Shipment -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ReadyForShipmentRequests}" FontSize="24" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding ReadyForShipmentText, FallbackValue='Ready for Shipment'}" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Quick Actions FIFTH -->
            <StackPanel Grid.Row="4" Margin="20,0,20,30">
                <TextBlock Text="{Binding QuickActionsHeaderText, FallbackValue='âš¡ Quick Actions'}" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" Margin="10,0,0,15"/>
                
                <Grid ColumnDefinitions="1*,1*">
                    <Border Grid.Column="0" CornerRadius="12" Height="100">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#1E3A8A" Offset="0"/>
                                <GradientStop Color="#1D4ED8" Offset="0.5"/>
                                <GradientStop Color="#2563EB" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        
                        <Button Background="Transparent" 
                                BorderThickness="0" 
                                Command="{Binding NavigateToSectionCommand}" 
                                CommandParameter="Reports"
                                HorizontalContentAlignment="Stretch" 
                                VerticalContentAlignment="Stretch"
                                CornerRadius="12">
                            <Grid ColumnDefinitions="Auto,*">
                                <Border Grid.Column="0" 
                                        Background="Gold" 
                                        CornerRadius="10" 
                                        Width="65" 
                                        Height="65" 
                                        Margin="25,0,0,0">
                                    <TextBlock Text="ðŸ“Š" 
                                               FontSize="28" 
                                               Foreground="White" 
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="22,0,25,0">
                                    <TextBlock Text="{Binding ViewSystemReportsText, FallbackValue='View System Reports'}" 
                                               FontSize="18" 
                                               Foreground="White" 
                                               FontWeight="Bold"/>
                                    <TextBlock Text="{Binding AccessComprehensiveText, FallbackValue='Access comprehensive system analytics and reports'}" 
                                               FontSize="13" 
                                               Foreground="#BFDBFE" 
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Button>
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>
        
        <!-- SECTION CONTENT -->
        <ContentControl Content="{Binding CurrentSectionView}"
                        IsVisible="{Binding CurrentSectionView, Converter={x:Static ObjectConverters.IsNotNull}}"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch" />
        
    </Grid>
</UserControl>