<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LogisticsPro.UI.ViewModels"
             x:Class="LogisticsPro.UI.Views.Warehouse.WarehouseManager.Sections.ProductRequestsSection"
             x:DataType="vm:WarehouseManagerDashboardViewModel">
    
    <!-- Styles remain the same -->
    <UserControl.Styles>
        <StyleInclude Source="/Styles/EditAddEmployee.axaml"/>
        
        <Style Selector="TextBlock.field-label">
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Better Refresh Button Style -->
        <Style Selector="Button.refresh-btn">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="18,10"/>
        </Style>
        
        <Style Selector="Button.refresh-btn:pointerover">
            <Setter Property="Background" Value="#059669"/>
        </Style>

        <Style Selector="Button.primary-btn">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,10"/>
        </Style>
        
        <Style Selector="Button.primary-btn:pointerover">
            <Setter Property="Background" Value="#2563EB"/>
        </Style>

        <!-- Enhanced DataGrid Styles -->
        <Style Selector="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>
        
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style Selector="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="40"/>
        </Style>
        
        <Style Selector="DataGridRow:pointerover">
            <Setter Property="Background" Value="#F9FAFB"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="25" Spacing="20">
            
            <!-- Header Section with Action Buttons -->
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0">
                    <TextBlock Text="📋 Product Requests Management" FontSize="24" FontWeight="Bold" Foreground="#1E293B"/>
                    <TextBlock Text="Create and manage product requests for your warehouse" FontSize="14" Foreground="#64748B"/>
                </StackPanel>
                
                <!-- Action Buttons -->
                <Button Grid.Column="1" Classes="primary-btn" Height="40" Width="140" Margin="0,8,12,0"
                        Command="{Binding OpenRequestDialogCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="+ New Request" FontSize="13" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
            
            <!-- Status Cards Row (Pending in Yellow) -->
            <Grid ColumnDefinitions="*,*,*" Height="100">
                <!-- Pending Card (Yellow) -->
                <Border Grid.Column="0" Background="#EAB308" CornerRadius="8" Margin="0,0,8,0">
                    <StackPanel Margin="18" VerticalAlignment="Center">
                        <TextBlock Text="⏳ Pending" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding PendingRequests.Count, FallbackValue='1'}" 
                                   FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,4,0,0"/>
                        <TextBlock Text="awaiting approval" FontSize="11" Foreground="#FEF3C7"/>
                    </StackPanel>
                </Border>
                
                <!-- This Month Card -->
                <Border Grid.Column="1" Background="#10B981" CornerRadius="8" Margin="4,0">
                    <StackPanel Margin="18" VerticalAlignment="Center">
                        <TextBlock Text="📅 This Month" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalRequestsThisMonth, FallbackValue='25'}" 
                                   FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,4,0,0"/>
                        <TextBlock Text="requests submitted" FontSize="11" Foreground="#86EFAC"/>
                    </StackPanel>
                </Border>
                
                <!-- Approved Card -->
                <Border Grid.Column="2" Background="#8B5CF6" CornerRadius="8" Margin="8,0,0,0">
                    <StackPanel Margin="18" VerticalAlignment="Center">
                        <TextBlock Text="✅ Approved" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding ApprovedRequestsCount, FallbackValue='17'}" 
                                   FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,4,0,0"/>
                        <TextBlock Text="this month" FontSize="11" Foreground="#DDD6FE"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Requests Table Section -->
            <Border Background="White" BorderBrush="Black" BorderThickness="2" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="📋 All Requests" FontSize="18" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,15"/>
                    
                    <DataGrid ItemsSource="{Binding PaginatedRequests}"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0"
                              Height="400">

                        <DataGrid.Columns>
                            <!-- Order ID -->
                            <DataGridTextColumn Header="#" 
                                                Binding="{Binding DisplayId}" 
                                                Width="50"
                                                MinWidth="40"/>

                            <!-- Product Name -->
                            <DataGridTemplateColumn Header="Product" Width="200" MinWidth="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Product.Name, FallbackValue='-'}" 
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Margin="8,0"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip.Tip="{Binding Product.Name}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- SKU -->
                            <DataGridTemplateColumn Header="SKU" Width="120" MinWidth="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Product.SKU, FallbackValue='N/A'}" 
                                                   VerticalAlignment="Center" 
                                                   Margin="8,0"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip.Tip="{Binding Product.SKU}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Quantity -->
                            <DataGridTemplateColumn Header="Quantity" Width="100" MinWidth="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RequestedQuantity, FallbackValue='0'}" 
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Margin="8,0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Total Cost (Black) -->
                            <DataGridTemplateColumn Header="Total Cost" Width="120" MinWidth="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Margin="8,0"
                                                   FontWeight="SemiBold">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="${0:N0}">
                                                    <Binding Path="TotalCost" FallbackValue="0"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Status -->
                            <DataGridTemplateColumn Header="Status" Width="100" MinWidth="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RequestStatus, FallbackValue='Pending'}" 
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Margin="8,0"
                                                   FontWeight="SemiBold"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Date -->
                            <DataGridTemplateColumn Header="Date" Width="90" MinWidth="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Margin="8,0"
                                                   FontSize="12">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0:MM/dd}">
                                                    <Binding Path="RequestDate"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Approved By Column with "-" for pending -->
                            <DataGridTemplateColumn Header="Approved By" Width="120" MinWidth="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ApprovedByUsername, FallbackValue='-'}" 
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Margin="8,0"
                                                   FontSize="12"
                                                   Foreground="#374151"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip.Tip="{Binding ApprovedByUsername}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Action with Cancel/Processed Logic -->
                            <DataGridTemplateColumn Header="Action" Width="*" MinWidth="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <!-- Cancel Button (only for pending) -->
                                            <Button Content="Cancel" 
                                                    Background="#EF4444"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    CornerRadius="4"
                                                    FontSize="11"
                                                    FontWeight="SemiBold"
                                                    Padding="6,3"
                                                    Height="26"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Command="{Binding $parent[UserControl].((vm:WarehouseManagerDashboardViewModel)DataContext).CancelRequestCommand}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip.Tip="Cancel this pending request"
                                                    IsVisible="{Binding IsPending}"/>
                
                                            <!-- "Processed" Text (for non-pending) -->
                                            <TextBlock Text="Processed" 
                                                       VerticalAlignment="Center" 
                                                       HorizontalAlignment="Center"
                                                       Margin="8,0"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="#6B7280"
                                                       IsVisible="{Binding !IsPending}"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Enhanced Pagination Controls -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Spacing="10"
                                Margin="0,15,0,0">
                        
                        <Button Content="← Previous" 
                                Background="#F3F4F6"
                                Foreground="#374151"
                                BorderThickness="1"
                                BorderBrush="#D1D5DB"
                                CornerRadius="6"
                                Padding="12,8"
                                FontWeight="Medium"
                                Command="{Binding PreviousPageCommand}"
                                IsEnabled="{Binding CanGoPrevious}"/>
                                
                        <Border Background="White"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,8">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#374151"
                                       FontWeight="Medium"
                                       FontSize="13">
                                <Run Text="Page"/>
                                <Run Text="{Binding CurrentRequestPage}"/>
                                <Run Text="of"/>
                                <Run Text="{Binding TotalRequestPages}"/>
                                <Run Text="•"/>
                                <Run Text="{Binding AllRequests.Count}"/>
                                <Run Text="requests"/>
                            </TextBlock>
                        </Border>
                        
                        <Button Content="Next →" 
                                Background="#F3F4F6"
                                Foreground="#374151"
                                BorderThickness="1"
                                BorderBrush="#D1D5DB"
                                CornerRadius="6"
                                Padding="12,8"
                                FontWeight="Medium"
                                Command="{Binding NextPageCommand}"
                                IsEnabled="{Binding CanGoNext}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Loading Indicator -->
            <Border Background="#EFF6FF" 
                    IsVisible="{Binding IsLoading, FallbackValue='false'}"
                    CornerRadius="8" 
                    Padding="20">
                <StackPanel HorizontalAlignment="Center" Spacing="10">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#3B82F6"/>
                    <TextBlock Text="Loading requests data..." HorizontalAlignment="Center" FontSize="14" Foreground="#1E40AF"/>
                </StackPanel>
            </Border>
                </StackPanel>
        </ScrollViewer>
        
       <!-- Modal Dialog Overlay Layer -->
        <Grid IsVisible="{Binding IsRequestDialogOpen}" 
              ZIndex="1000">
            
            <!-- Full-Screen Backdrop -->
            <Border Background="#80000000"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
            
            <!-- Centered Dialog Container -->
            <ScrollViewer HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          MaxHeight="600"
                          MaxWidth="550">
                <Border Background="White" 
                        CornerRadius="12" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1"
                        BoxShadow="0 20 25 -5 #10000000, 0 10 10 -5 #05000000"
                        Width="500" 
                        Padding="30"
                        Margin="20">
                    <StackPanel Spacing="25">
                        <!-- Dialog Header -->
                        <StackPanel>
                            <TextBlock Text="📋 Create New Product Request" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="#1E293B"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Select a product and specify quantity for procurement approval" 
                                       FontSize="13" 
                                       Foreground="#64748B"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <!-- Product Selection with better styling -->
                        <StackPanel>
                            <TextBlock Text="Product Selection *" 
                                       Classes="field-label"/>
                            <ComboBox ItemsSource="{Binding Products}"
                                      SelectedItem="{Binding SelectedProduct}"
                                      DisplayMemberBinding="{Binding Name}"
                                      PlaceholderText="Select a product to request..."
                                      Height="44"
                                      Background="White"
                                      Foreground="#1E293B"
                                      BorderBrush="#D1D5DB"
                                      BorderThickness="1"
                                      CornerRadius="6"
                                      Padding="12,8"
                                      FontSize="14">
                                <!-- ComboBox dropdown styling -->
                                <ComboBox.Styles>
                                    <Style Selector="ComboBox /template/ ContentPresenter#PART_ContentPresenter">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="#1E293B"/>
                                    </Style>
                                    <Style Selector="ComboBoxItem">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="#1E293B"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                    </Style>
                                    <Style Selector="ComboBoxItem:pointerover">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                        <Setter Property="Foreground" Value="#1E293B"/>
                                    </Style>
                                    <Style Selector="ComboBoxItem:selected">
                                        <Setter Property="Background" Value="#3B82F6"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </ComboBox.Styles>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Quantity Input with string binding to prevent validation errors -->
                        <StackPanel>
                            <TextBlock Text="Quantity *" 
                                       Classes="field-label"/>
                            <TextBox Text="{Binding QuantityText}"
                                     Background="White"
                                     Foreground="#1E293B"
                                     BorderBrush="#D1D5DB"
                                     BorderThickness="1"
                                     CornerRadius="6"
                                     Padding="12,8"
                                     FontSize="14"
                                     Height="44"
                                     Watermark="Enter quantity...">
                                <!-- Basic TextBox styling without template parts -->
                                <TextBox.Styles>
                                    <Style Selector="TextBox:focus">
                                        <Setter Property="BorderBrush" Value="#3B82F6"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Style>
                                </TextBox.Styles>
                            </TextBox>
                        </StackPanel>
                        
                        <!-- Unit Price Display -->
                        <StackPanel>
                            <TextBlock Text="Unit Price (Per Item)" 
                                       Classes="field-label"/>
                            <Border Background="#F9FAFB" 
                                    BorderBrush="#E5E7EB" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Height="44"
                                    Padding="12,0">
                                <TextBlock Text="{Binding SelectedProduct.UnitPrice, StringFormat='${0:F2} per unit', FallbackValue='$0.00 per unit'}" 
                                           VerticalAlignment="Center" 
                                           FontSize="14"
                                           FontWeight="SemiBold" 
                                           Foreground="#059669"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- Notes Section -->
                        <StackPanel>
                            <TextBlock Text="Justification Notes (Optional)" 
                                       Classes="field-label"/>
                            <TextBox Text="{Binding NewRequest.Notes}"
                                     Height="70"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Background="White"
                                     Foreground="#1E293B"
                                     BorderBrush="#D1D5DB"
                                     BorderThickness="1"
                                     CornerRadius="6"
                                     Padding="12,8"
                                     FontSize="14"
                                     Watermark="Enter reason for this request (optional)..."/>
                        </StackPanel>
                        
                        <!-- Total Cost Display -->
                        <Border Background="#FEF2F2" 
                                BorderBrush="#EF4444"
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="16">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Total Cost" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               FontSize="16" 
                                               FontWeight="SemiBold"
                                               Foreground="#1E293B"/>
                                    <TextBlock Text="This amount will be deducted from budget" 
                                               FontSize="12" 
                                               Foreground="#64748B"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding TotalCost, StringFormat='${0:N2}', FallbackValue='$0.00'}" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#EF4444" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <!-- Budget After Order Display -->
                        <Border Background="#F0FDF4" 
                                BorderBrush="#10B981" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="12">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0" 
                                           Text="Remaining Budget After Order:" 
                                           FontSize="14" 
                                           Foreground="#1E293B"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding BudgetAfterOrder, StringFormat='${0:N0}', FallbackValue='$0'}" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#059669" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <!-- Dialog Actions -->
                        <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,10,0,0">
                            <TextBlock Grid.Column="0" 
                                       Text="* Required fields" 
                                       FontSize="12" 
                                       Foreground="#9CA3AF" 
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1" 
                                    Content="Cancel" 
                                    Width="80" 
                                    Height="40" 
                                    Margin="0,0,12,0"
                                    Background="#F3F4F6"
                                    Foreground="#374151"
                                    BorderBrush="#D1D5DB"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Command="{Binding CloseRequestDialogCommand}"/>
                            <Button Grid.Column="2" 
                                    Content="Submit Request" 
                                    Width="130" 
                                    Height="40"
                                    Background="#3B82F6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="6"
                                    FontWeight="SemiBold"
                                    Command="{Binding SubmitRequestCommand}"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>